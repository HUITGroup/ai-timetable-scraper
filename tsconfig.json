{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
